                                        <RowDefinition Height="120"/>
                                        <RowDefinition Height="72"/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Image Grid.Row="0" Source="{Binding LargeImage}" Width="100" Height="100"/>
                                    <StackPanel Grid.Row="1" Orientation="Vertical" VerticalAlignment="Top">
                                        <TextBlock Text="{Binding Name}" FontSize="24" TextAlignment="Center"
                                           Foreground="Black" FontWeight="Normal"/>
                                        <TextBlock Text="{Binding Type}" FontSize="20" TextAlignment="Center"
                                           Foreground="DimGray" FontWeight="Thin"/>
                                        <Line X1="60" Y1="5" X2="440" Y2="5" Stroke="Black"/>
                                    </StackPanel>
                                    <StackPanel Grid.Row="2">
                                        <TextBlock Text="{Binding Description}" FontSize="16" TextAlignment="Left" Width="380"
                                           Foreground="Black" TextWrapping="Wrap"/>
                                        <TextBlock x:Name="WebServiceHyperlinkTextBlock" Text="Learn more..." FontSize="16"
                                           TextAlignment="Left" HorizontalAlignment="Left" Margin="60, 0, 0, 0" Width="92"
                                           MouseLeftButtonUp="WebServiceHyperlinkTextBlock_MouseLeftButtonUp">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Foreground" Value="Blue"/>
                                                            <Setter Property="TextDecorations" Value="Underline"/>
                                                            <Setter Property="Cursor" Value="Hand"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
